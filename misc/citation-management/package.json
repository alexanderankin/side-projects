{
  "name": "citation-management",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node ./bin/www",
    "build": "npm run build:frontend",
    "build:frontend": "vite build",
    "test": "jasmine test/**",
    "test:sqlite": "TEST_DB=sqlite3 jasmine test/**",
    "test:jasmine-json": "jasmine --config=jasmine.json",
    "test:sqlite:jasmine-json": "TEST_DB=sqlite3 jasmine --config=jasmine.json",
    "dev": "concurrently 'npm run dev:frontend' 'npm run dev:backend'",
    "dev:frontend": "vite build --watch --mode=dev",
    "dev:backend": "nodemon bin/www.js",
    "reload": "concurrently 'npm run reload:frontend' 'npm run reload:backend'",
    "reload:frontend": "vite",
    "reload:backend": "nodemon bin/www.js",
    "dev:vite": "vite dev",
    "knex": "knex",
    "jasmine": "jasmine",
    "vite": "vite"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-errors": "^2.0.0",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "morgan": "~1.9.1",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.5.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.3",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "bootstrap": "^5.3.2",
    "chai": "^5.0.0",
    "concurrently": "^8.2.2",
    "jasmine": "^5.1.0",
    "nodemon": "^3.0.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-router": "^6.21.2",
    "react-router-dom": "^6.21.2",
    "testcontainers": "^10.5.0",
    "vite": "^5.0.11"
  }
}
